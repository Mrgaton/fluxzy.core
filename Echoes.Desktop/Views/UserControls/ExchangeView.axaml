<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:Echoes.Desktop.Common.Models;assembly=Echoes.Desktop.Common"
             xmlns:converters="clr-namespace:Echoes.Desktop.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Echoes.Desktop.Views.UserControls.ExchangeView"
             PointerPressed="OnPanelClick"
             >

    <Design.DataContext>
        <models:ExchangeViewModel/>
    </Design.DataContext>

	<Border Padding="4" Classes.SelectedExchange="{Binding Selected^}"  >
        <StackPanel Orientation="Horizontal" >
            <TextBlock Text="{Binding Method}" MaxWidth="75" MinWidth="75"></TextBlock>
            <TextBlock Text="{Binding StatusCode}" MaxWidth="50" MinWidth="50"></TextBlock>
            <TextBlock Text="{Binding Url}"></TextBlock>
        </StackPanel>
    </Border>

</UserControl>
